<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y108">
    <ImageView
            android:src="@drawable/back"
            android:padding="@dimen/x10"
            android:id="@+id/tb_iv_back"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:layout_marginLeft="@dimen/x30"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:textStyle="bold"
            android:id="@+id/tb_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/y34"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/iv_titlebar_logo"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:id="@+id/tb_ll_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:id="@+id/tb_tv_right_textview"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/x28"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/tb_iv_right_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x28"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>